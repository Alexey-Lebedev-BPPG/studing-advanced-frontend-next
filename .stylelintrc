{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-standard",
    "stylelint-config-clean-order"
  ],
  "plugins": ["stylelint-order"],
  "rules": {
    "import-notation": "string",
    "scss/at-mixin-pattern": null,
    "at-rule-no-unknown": [
      true,
      { "ignoreAtRules": ["function", "if", "each", "include", "mixin"] }
    ]
  }
}
